{
  "private": true,
  "name": "designbits",
  "version": "0.0.1",
  "description": "",
  "license": "",
  "scripts": {
    "prepare": "husky install",
    "postinstall": "remix setup node && yarn run install:dotenv-linter",
    "dev": "concurrently -n \"Database,TailwindCSS,Remix Dev\"  -c \"#cdfabc.italic,#bada55.bold,#10b981.bold\" \"yarn connect:database:develop\" \"yarn dev:css\" \"remix dev\"",
    "dev:css": "tailwindcss -o ./src/app/styles/tailwind.css --watch",
    "dev:remix": "remix dev",
    "build": "yarn prisma:generate && yarn run build:css && remix build",
    "build:css": "tailwindcss -o ./src/app/styles/tailwind.css",
    "start": "remix-serve build",
    "connect:databases": "concurrently -c \"#10b981.bold,#bada55.bold\" \"yarn:connect:database:*\"",
    "connect:database:develop": "pscale connect --org tirth designbits develop --port 3309",
    "connect:database:shadow": "pscale connect --org tirth designbits shadow --port ${SHADOW_DATABASE_PORT:-3310}",
    "connect:database:main": "pscale connect --org tirth designbits main --port ${SHADOW_DATABASE_PORT:-3306}",
    "lint": "eslint --fix --cache --cache-location ./node_modules/.cache/.eslintcache --ext js,jsx,ts,tsx .",
    "lint:staged": "eslint --fix --no-error-on-unmatched-pattern --cache --cache-location ./node_modules/.cache/.eslintcache",
    "typecheck": "concurrently --raw yarn:typecheck:*",
    "typecheck:app": "tsc --noEmit",
    "install:dotenv-linter": "curl -sSfL https://raw.githubusercontent.com/dotenv-linter/dotenv-linter/master/install.sh | sh -s -- -b node_modules/.bin",
    "prisma:create-migration": "npx prisma migrate dev",
    "prisma:reset-db": "npx prisma migrate reset",
    "prisma:generate": "npx prisma generate",
    "prisma:reset-db:skip-upload": "SKIP_UPLOAD=true yarn prisma:reset-db",
    "ts": "env-cmd node -r esbuild-register",
    "vercel:env:push": "bash scripts/env.sh"
  },
  "prisma": {
    "schema": "src/prisma/schema.prisma",
    "seed": "node --require esbuild-register src/prisma/seed.ts"
  },
